<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MvcExercise</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* Custom styles for sidebar shadow */
        body, html {
            height: 100%;
        }

        .container-fluid {
            height: 100%;
        }

        .sidebar {
            position: sticky; /* Make the sidebar sticky */
            top: 56px; /* Adjust this based on your navbar height */
            height: calc(100vh - 56px); /* Full height minus navbar height */
            padding: 15px; /* Optional padding for aesthetics */
            overflow-y: auto; /* Enable scrolling if sidebar content overflows */
        }

        .main-content {
            height: calc(100vh - 56px); /* Adjust this based on your navbar height */
            overflow-y: auto; /* Enable scrolling if content overflows */
        }
    </style>
</head>
<body>
    <!-- Top Navbar with Toggle and Logout Button -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light fixed-top border-bottom">
        <div class="container-fluid">
            <!-- Sidebar Toggle Button -->
            <button class="btn btn-primary me-2" id="sidebarToggle">
                <i class="fas fa-bars"></i>
            </button>
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">MvcExercise</a>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <form asp-area="" asp-controller="IPublicUser" asp-action="Logout" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-link text-dark d-flex align-items-center">
                            <i class="fas fa-sign-out-alt me-1"></i> Logout
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </nav>

    <!-- Main Content with Sidebar Layout -->
    <div class="container-fluid">
        <div class="row" style="margin-top: 56px;">
            <!-- Sidebar -->
            <nav id="sidebar" class="col-md-3 col-lg-2 bg-light sidebar collapse d-md-block">
                <div class="position-sticky pt-3">
                    <h5 class="text-center">Menu</h5>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("Dashboard", "JobSeeker")">
                                <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("SavedJobsList", "JobSeeker")">
                                <i class="fas fa-bookmark me-2"></i> Saved Jobs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ApplyedJobsList", "JobSeeker")">
                                <i class="fas fa-file-alt me-2"></i> Applied Jobs
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "JobSeeker")">
                                <i class="fas fa-list me-2"></i> List Jobs
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content Area -->
            <main class="col-md-9 col-lg-10 ms-sm-auto px-md-4">
                <div class="container">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </main>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
